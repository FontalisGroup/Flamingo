    # Util
    pod 'R.swift', '~> 4.0'
    pod 'SDWebImage', '~> 4.2'

    # Networking
    pod 'HNScraper', '~> 0.1.1'
    pod 'Moya', '~> 9.0.0'
    pod 'ModelMapper', '~> 7.4'

end

target 'Flamingo' do
    shared_pods
end

